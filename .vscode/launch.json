  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": ["run"],
      "jinja": true
    },
    {
      "name": "Python: Run Tests",
      "type": "python",
      "module": "flask",
      "request": "launch",
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "testing",
        "FLASK_DEBUG": "1"
      },
      "args": ["tests", "debug"],
      "jinja": true
    }
  ]
}
